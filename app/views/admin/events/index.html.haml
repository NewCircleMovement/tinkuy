.row
  .col-md-12
    %h1 Aktiviteter
  .col-md-6
    %h3 Aktuelle
    %hr/
    %table.table-striped.table-condensed
      %thead
        %th Stemmer
        %th Dato
        %th Tid
        %th Navn
        %td Aktion
      %tbody
      - @confirmed_events.each do |event|
        %tr
          %td= event.fruits.count
          %td= event.startdate
          %td
            - if event.starttime?
              = event.starttime.strftime('%H:%M')
          %td= event.name
          %td
            = link_to "Ret", edit_admin_event_path(event), :class => "btn btn-primary btn-xs"
            = link_to 'Slet', event, method: :delete, data: { confirm: 'Er du sikker?' }, :class => "btn btn-danger btn-xs"
