.row
  .col-md-12
    %h1 Aktiviteter
  .col-md-6
    %h3 Bekræftede
    %hr/
    %table.table-striped.table-condensed
      %thead
        %th Stemmer
        %th Dato
        %th Tid
        %th Navn
      %tbody
      - @confirmed_events.each do |event|
        %tr
          %td X
          %td= event.startdate
          %td= event.starttime.strftime('%H:%M')
          %td= event.name
  .col-md-6
    %h3 Ikke bekræftede
    %hr/
    %table.table-striped.table-condensed
      %thead
        %th Stemmer
        %th Dato
        %th Tid
        %th Navn
      %tbody
      - @unconfirmed_events.each do |event|
        %tr
          %td X
          %td= event.startdate
          %td= event.starttime.strftime('%H:%M')
          %td= event.name