.jumbotron.page
  .container
    .row
      .col-md-12
        %h1.page
          Book
          = @room.name

.container
  .row
    .col-md-8
      %p
        Hej
        = current_user.firstname if current_user.present?
      %p
        Du er ved at booke 
        = @room.name
      %p
        = @timeslot.startdate
        |
        = @timeslot.starttime.strftime("%H:%M")

      = simple_form_for [@room, @timeslot, @booking] do |f|
        - if @booking.errors.any?
          #error_explanation
            %h2
              = pluralize(@booking.errors.count, "error")
              prohibited this event from being saved:
            %ul
              - @booking.errors.full_messages.each do |msg|
                %li= msg
        

        = f.input :lemons, :label => "Frugter", :collection => (5..100).step(5)
        - if current_user.present?
          = f.hidden_field :user_id, :value => current_user.id
        = f.submit "Book", :class => "btn btn-primary"