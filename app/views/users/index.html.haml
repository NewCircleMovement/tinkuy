.jumbotron.page
  .container
    .row
      .col-md-12
        %h1.page
          Medlemmer
          
.container
  .row
    .col-md-6
      %h5
        = session[:monday_date]
        = " - "
        = session[:week_number]
      %h3 
        Bekræftede medlemmer:
        = @confirmed_users.length
      %hr/
      %ul.list-unstyled
        - @confirmed_users.each do |user|
          %li
            = user.firstname
            = user.surname
      
    .col-md-6
      %h3
        Afventer bekræftelse:
        = @pending_users.length
      %hr/
      %ul.list-unstyled
        - @pending_users.each do |user|
          %li
            = user.firstname
            = user.surname



