= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :startdate
    %br/
    = f.text_field :startdate, :class => 'form_datetime'
  .actions
    = f.submit

:javascript
  $(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});